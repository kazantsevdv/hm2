<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="hw4.Controller">
    <center>
        <TextArea editable="false" fx:id="textArea"/>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <TextField fx:id="inputText" promptText="Новое сообщение" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                       onAction="#sendMsg">
            </TextField>
            <Button text="Отправить" onAction="#sendMsg">
            </Button>
        </HBox>
    </bottom>

</BorderPane>
